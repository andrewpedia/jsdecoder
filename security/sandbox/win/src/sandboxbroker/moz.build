LIBRARY_NAME = 'sandboxbroker'

SOURCES += [
    'sandboxBroker.cpp',
]

EXPORTS += [
    'sandboxBroker.h',
]

FORCE_SHARED_LIB = True

for var in ('UNICODE', '_UNICODE', 'NS_NO_XPCOM', 'NOMINMAX',
            'SANDBOX_EXPORTS'):
    DEFINES[var] = True

LOCAL_INCLUDES += [
    '/security',
    '/security/sandbox',
    '/security/sandbox/chromium',
]

DISABLE_STL_WRAPPING = True
